{
    "plugins": [
        "callouts",
        "image-captions",
        "simple-page-toc",
        "copy-code-button"
    ],
    "pluginsConfig": {
        "callouts":
        {
            "showTypeInHeader": true,
            "assignment": {
                "alert": "success",
                "picto": "fa-lightbulb-o"
            },
            "definition": {
                "alert": "note",
                "picto": "fa-edit"
            }
        },
        "simple-page-toc": {
            "maxDepth": 3,
            "skipFirstH1": true
        },
        "image-captions": {
            "caption": "Image _PAGE_IMAGE_NUMBER_ - _CAPTION_"
        }
    }
}
